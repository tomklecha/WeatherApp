<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/weather_fragment_layout"
    tools:context=".fragments.WeatherCurrentFragment">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tempCurrent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tempCurrent" />

        <TextView
            android:id="@+id/tempMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tempMin" />

        <TextView
            android:id="@+id/tempMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tempMax" />

        <TextView
            android:id="@+id/weatherDescripton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weatherDescripton" />
    </LinearLayout>
</FrameLayout>